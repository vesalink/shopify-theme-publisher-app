{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "quotes": 0,
    "arrow-parens": 0,
    "comma-dangle": 0,
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
    "jsx-a11y/img-has-alt": 0,
    "no-console": 0,
    "no-shadow": 0,
    "no-unused-vars": [2, {"vars": "local", "args": "none"}],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-wrap-multilines": 0,
    "react/prop-types": 0,
    "max-len": [2, 300, 4],
    "react/sort-comp": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "func-names": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "no-plusplus": 0,
    "react/jsx-indent": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "no-await-in-loop": 0,
    "no-nested-ternary": 0,
    "no-control-regex": 0
  },
  "plugins": ["react", "jsx-a11y", "jest"],
  "globals": {
    "__DEVSERVER__": true,
    "__DEVCLIENT__": true,
    "jest": true
  }
}
